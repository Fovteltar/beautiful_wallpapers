<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/backgroundsImageView"
        android:layout_width="0dp"
        android:layout_height="@dimen/wallpaperHeight"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/backgrounds"
        android:padding="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/backgrounds"
        app:layout_constraintEnd_toStartOf="@+id/fashionImageView"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/fashionImageView"
        android:layout_width="0dp"
        android:layout_height="@dimen/wallpaperHeight"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/fashion"
        android:padding="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/fashion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/backgroundsImageView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/natureImageView"
        android:layout_width="0dp"
        android:layout_height="@dimen/wallpaperHeight"
        android:contentDescription="@string/nature"
        android:padding="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/nature"
        app:layout_constraintEnd_toStartOf="@+id/fashionImageView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backgroundsImageView" />

    <ImageView
        android:id="@+id/scienceImageView"
        android:layout_width="0dp"
        android:layout_height="@dimen/wallpaperHeight"
        android:contentDescription="@string/science"
        android:padding="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/science"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/backgroundsImageView"
        app:layout_constraintTop_toBottomOf="@+id/fashionImageView" />

    <ImageView
        android:id="@+id/educationImageView"
        android:layout_width="0dp"
        android:layout_height="@dimen/wallpaperHeight"
        android:contentDescription="@string/education"
        android:padding="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/education"
        app:layout_constraintEnd_toStartOf="@+id/fashionImageView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/natureImageView" />

    <ImageView
        android:id="@+id/feelingsImageView"
        android:layout_width="0dp"
        android:layout_height="@dimen/wallpaperHeight"
        android:contentDescription="@string/feelings"
        android:padding="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/feelings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/backgroundsImageView"
        app:layout_constraintTop_toBottomOf="@+id/scienceImageView"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/textView"
        style="@style/labelStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/categories"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>